/**
*
* @author Riphah
*/
public class EVEN {
 public static void main(String[] args) {
 int num1=2;
 if(num1%2==0){
 System.out.println("THE NUMBER IS EVEN");
 }
 else{
 System.out.println("THE NUMBER IS ODD");
 }
//Task 3
package pkgwhile;
/**
*
* @author Riphah
*/
public class While {
 public static void main(String[] args) {
 int number = 1; // Start with 1

 while (number <= 20) {
 if (number % 2 == 0) {
 System.out.println(number);
 }
 number++;
 }
 }
//Task 4
package loop;
/**
*
* @author Riphah
*/
public class Loop {
 /**
 * @param args the command line arguments
 */
 public static void main(String[] args) {

 int rows = 6;
 for (int i = 0; i < rows; i++) {
 for (int j = 0; j < rows; j++) {
 System.out.print("* ");
 }
 System.out.println();
 }
 }
}

//Task 5
package factorial;
/**
*
* @author Riphah
*/
public class Factorial {
 /**
 * @param args the command line arguments
 */
 public static void main(String[] args) {

 int number = 5;
 int factorial = 1;

 while (number > 0) {
 factorial *= number;
 number--;
 }

 System.out.println("The factorial is: " + factorial);
 }
}


